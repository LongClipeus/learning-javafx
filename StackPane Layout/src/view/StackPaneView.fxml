<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPane" maxHeight="700.0"
	maxWidth="700.0" minHeight="300.0" minWidth="300.0" prefHeight="500.0"
	prefWidth="500.0" snapToPixel="true"
	xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/2.2"
	fx:controller="controller.StackShow">
	<!-- TODO Add Nodes -->
	<children>
		<Button fx:id="btnChangeTop" alignment="CENTER"
			contentDisplay="CENTER" mnemonicParsing="false" onAction="#ChangeTop"
			prefHeight="40.0" prefWidth="150.0" text="Change Top"
			textAlignment="CENTER" textFill="BLACK"
			StackPane.alignment="BOTTOM_CENTER">
			<font>
				<Font size="15.0" />
			</font>
			<StackPane.margin>
				<Insets bottom="40.0" />
			</StackPane.margin>
		</Button>
		<TextField fx:id="txtfXinChao" alignment="CENTER"
			cache="true" disable="false" editable="false" focusTraversable="true"
			mouseTransparent="false" pickOnBounds="false" prefHeight="345.0"
			prefWidth="480.0" text="Xin chao" visible="true"
			StackPane.alignment="TOP_CENTER" />
		<TextField fx:id="txtfHelloWorld" alignment="CENTER"
			editable="false" maxHeight="300.0" maxWidth="400.0" minHeight="100.0"
			minWidth="100.0" prefColumnCount="12" prefHeight="200.0"
			prefWidth="200.0" text="Hello world" StackPane.alignment="TOP_CENTER" />
		<TextField fx:id="txtfSayHi" alignment="CENTER" cache="true"
			cacheHint="SCALE_AND_ROTATE" editable="false" focusTraversable="true"
			maxHeight="230.0" maxWidth="400.0" minHeight="100.0" minWidth="100.0"
			mouseTransparent="false" pickOnBounds="false" prefHeight="230.0"
			prefWidth="400.0" text="Say hi" StackPane.alignment="TOP_CENTER" />
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
</StackPane>
